<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewDBS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/dbs"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/download" />

    <TextView
        android:id="@+id/textViewOCBC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ocbc"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ocbc_og" />

    <TextView
        android:id="@+id/textViewUOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/uob"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/uob" />
</LinearLayout>